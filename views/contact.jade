extends layout

block body
  div.container
    form#emailForm.form-horizontal
      div.form-group
        label(for="name").col-sm-2.control-label Name
        .col-sm-8
          input(type='text' class="form-control" id="name" placeholder="What's your name?")
      div.form-group
        label(for="email").col-sm-2.control-label Email
        .col-sm-10
          input(type="email" class="form-control" id="email" placeholder="Your email here")
      div.form-group
        label(for="subject").col-sm-2.control-label Subject*
        .col-sm-8
          input(type="text" class="form-control" id="subject" placeholder="Why email me?")
      div.form-group
        label(for="body").col-sm-2.control-label Body
        .col-sm-10
          textarea(rows="5" id='body' placeholder='What would you like me to know about you?').form-control
      .col-sm-offset-2
        button.btn.btn-primary Send!
  div.message
append scripts
  script(src='/javascripts/contact.js')
