extends layout

block body
  .container
    .page-header
      h1 The super secret admin page!
      p.lead For doing secret admin stuff.
  .container
    .row
      .col-md-4
        h2 Edit the resume
        p Add and remove things on my resume.
        p
          a.btn.btn-success(href='/admin/manageResume' role="button") Go!
      .col-md-4
        h2 Manage users
        p Warning: only Gods can go here.
        p Manage users, edit permissions, and view/edit information.
        p
          if (sessionData.permissions.indexOf('god') > -1)
            a.btn.btn-success(href='/admin/manageUsers' role="button") Go!
          else
            button.disabled.btn.btn-warning(href='/nope') :(
